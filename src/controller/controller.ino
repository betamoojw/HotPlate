void setup() {
  pinMode(ACTIVATE_TOP, OUTPUT);
  digitalWrite(ACTIVATE_TOP, LOW);
  pinMode(ACTIVATE_BOTTOM, OUTPUT);
  digitalWrite(ACTIVATE_BOTTOM, LOW);
  pinMode(SELECTOR, INPUT);

  pinMode(DEBUG, OUTPUT);
  digitalWrite(DEBUG, LOW);

  Wire.begin(); // On ESP8266 you can specify the SDA/SCL pins e.g. Wire.begin(4, 5);
  Wire.setClock(400000); // fast is better for smooth scrolling
  display.init();
  display.rotate_180(true);
  for (int i=0; i<8; i++)
  {
      display.direct(0, i, 128, background+i*8*16, 16);
  }
}

void loop() {
  digitalWrite(DEBUG, HIGH);
  int s = 128 - (analogRead(SELECTOR) >> 3);   // value 1 to 128
  digitalWrite(DEBUG, LOW);

  digitalWrite(ACTIVATE_TOP, HIGH);
  delay(s);
  digitalWrite(ACTIVATE_TOP, LOW);
  delay(128-s);

  digitalWrite(ACTIVATE_BOTTOM, HIGH);
  delay(s);
  digitalWrite(ACTIVATE_BOTTOM, LOW);
  delay(128-s);
}
